<div class="contents row">
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_task_path(@task.id) %>
          </li>
          <li>
            <%= link_to '削除', task_path(@task.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>

      <p><%= @task.reference_number %></p>
      <span class="name">
        <%= @task.invoice_number%>
        <%= @task.customer_email %>
        <%= @task.text %>
        <a href="">
          <span>投稿者</span><%= @task.user.nickname %>
        </a>
      </span>
      </span>
</div>

