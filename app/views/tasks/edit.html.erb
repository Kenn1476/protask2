<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Edit Task </h2>

    <%= form_with(model: @task, local: true) do |f| %>
     <div class="field">
    <%= f.label :reference_number, "Reference Number" %><br />
    <%= f.text_field :reference_number, id:"Reference Number" %>
  </div>

  <div class="field">
    <%= f.label :invoice_number, "Invoice Number" %><br />
    <%= f.text_field :invoice_number, id:"Invoice Number" %>
  </div>

  <div class="field">
    <%= f.label :customer_email, "Customer Email" %><br />
    <%= f.text_area :customer_email, class: :form__text, id:"Customer Email" %>
  </div>

  <div class="field">
    <%= f.label :text, "Text" %><br />
    <%= f.text_area :text, class: :form__text, id:"text" %>
  </div>

  <div class="actions">
    <%= f.submit "SEND", class: :form__btn  %>
  </div>
    <% end %>
  </div>
</div>