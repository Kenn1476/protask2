<div class="main">
  <div class="inner">
    <div class="user__wrapper">

<h1>Task List</h1>
<table class="table">
<thead>
  <tr>
    <th class="table__col1"><%= link_to "Reference Number" %> </th>
    <th class="table__col1"><%= link_to "Invoice Number" %> </th>
    <th class="table__col1"><%= link_to "Customer Email" %> </th>
    <th class="table__col1"><%= link_to "Text" %> </th>
    <th class="table__col1"><%= link_to "Edit" %> </th>
    <th class="table__col1"><%= link_to "Delete" %> </th>
    <th class="table__col1"><%= link_to "Show" %> </th>
  </tr>
  </thead>
  <tbody>
<% @tasks.each do |task| %>
  <tr>
    <td class="table__col2"><%=task.reference_number %></td>
    <td class="table__col2"><%= task.invoice_number %></td>
    <td class="table__col2"><%= task.customer_email %></td>
    <td class="table__col2"><%= task.text %></td>
    <td class="table__col2"><%= link_to '編集', edit_task_path(task.id) %></td>
    <td class="table__col2"><%= link_to '削除', task_path(task.id), data: { turbo_method: :delete } %></td>
    <td class="table__col2"><%= link_to '詳細', task_path(task.id) %></td>
  </tr>
  <% end %>
  
  </table>

   </div>
  </div>
</div>